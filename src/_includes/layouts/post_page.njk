---
layout: layouts/base_page.njk
section: post
---

{% block content %}
<article class="container pb-10 mx-auto sm:px-5">
  <h1 class="mt-5 text-2xl font-bold leading-10 tracking-tight text-indigo-600 sm:text-5xl">{{ title }}</h1>
  <p class="text-base leading-6 text-gray-500">Published {{ page.date | date }}</p>

  <div class="py-10 mx-auto w-7/10 rich-text">
    {{ layoutContent | safe }}
  </div>

  <a class="text-base leading-6 text-gray-500" href="{{ '/blog/' | url }}">← Blog index</a>
</article>
{% endblock %}